<!DOCTYPE html>
<html lang="en">
<head>
  <title>Đăng nhập</title>
  <%- include('./head.ejs') %>
</head>

<body>

  <!--==========================
    Header
  ============================-->
  <%- include('./header.ejs') %>
  <!-- #header -->

  <!--==========================
    Intro Section
  ============================-->

  <main id="main">
    
    <!--==========================
      Contact Section
    ============================-->
    <section id="contact" class="section-bg wow fadeInUp">
      <div class="container" style="max-width: 500px">

        <div class="section-header">
          <h3>Đăng nhập</h3>
        </div>

        <div class="form">
          <form action="" method="post" role="form" class="contactForm">
            
            <div class="form-group">
              <input type="email" class="form-control" name="email" placeholder="Email" data-rule="minlen:4" />
              <div class="validation"></div>
            </div>
            <div class="form-group">
              <input type="password" class="form-control" name="password" placeholder="Mật khẩu" data-rule="minlen:4" />
              <div class="validation"></div>
            </div>
            <div class="text-center"><button type="submit">Đăng nhập</button></div>
          </form>
        </div>

      </div>
    </section><!-- #contact -->

  </main>

  <!--==========================
    Footer
  ============================-->
  <%- include('./footer.ejs') %>

</body>
</html>
